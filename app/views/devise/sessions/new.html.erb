<style>
body {
	background: url(/assets/log.jpg) no-repeat center center fixed;
	-webkit-background-size: cover;
	  -moz-background-size: cover;
	  -o-background-size: cover;
	  background-size: cover;
	  
}
</style>


<body>
<div class="container navpad">
	<div class="row">
		<div class="col-lg-12">

			<div class = "welcome">
			<h2>Welcome Back</h2>

			<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

			  <div class="form-inputs">
			    
			    <p><%= f.input :email, required: false, autofocus: true %></p>
			    <p><%= f.input :password, required: false %></p>
			    <p><%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %></p>
			  </div>

			  <div class="form-tacos">
			    <%= f.button :submit, "Log in" %>
			  </div>
			<% end %>

			<div class = "forgot">
				<%= render "devise/shared/links" %>
			</div>

		</div>
	</div>
</div>
</body>