<div class = trip-form>
	<%=simple_form_for @trip do |f|%>
		<h3>Where are you guys going?</h3>
			<%= f.input :name, label: false, placeholder: 'Ex: California', autofocus: true %>
		<h3>How many people?</h3>
			<%= f.input :number, label: false, placeholder: 'Ex: 4'%>
			<br>
			<br>
			<%= f.submit %>
	<% end %>
</div>

	



