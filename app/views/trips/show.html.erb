<h1><strong><%= @trip.name %></strong></h1>
  
<%#= link_to "Add Expense", new_trip_expense_path(@trip) %>
<%#= render @trip.expenses %>

<p> Number of Attendees: <%= @trip.number %></p>

<p> Who's coming? </p>

	<% @trip.attendees.each do |a| %>
 		<%= a.name %>
 		<% end %>

<p> Add Another Attendee </p>
		
	<%= render 'attendees/attendee'%>

<br><br><br><br><br>

<%= link_to 'Edit', edit_trip_path(@trip) %> |
<%= link_to 'Delete', trip_path(@trip),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>


<p><%= link_to 'All trips', welcome_index_path %></p>
