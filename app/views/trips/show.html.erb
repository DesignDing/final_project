<h1>Expenses</h1>
<table id="expenses" class="display" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th>Date</th>
      <th>Payer</th>
      <th>Description</th>
       <th>Amount</th>
    </tr>
  </thead>
  <tbody>
  <% @trip.expenses.each do |expense| %>
      <tr>
        <td><%= expense.date %></td>
        <td><%= expense.payer %></td>
        <td><%= expense.description %></td>
        <td><%= expense.amount %></td>
      </tr>
   <% end %>
  </tbody>
</table>

<%= link_to 'Add new expense', new_trip_expense_path(@trip) %>


<br><br><br><br>

<%= link_to 'Edit', edit_trip_path(@trip) %> |
<%= link_to 'Delete', trip_path(@trip),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>


<p><%= link_to 'All trips', welcome_index_path %></p>

<p><%= link_to 'Start', new_trip_expense_path(@trip) %></p>