<div class = expense-form>
<%=simple_form_for [@trip, @expense] do |f|%>
	<%= f.input :date, label: 'Date:'%>
	</br>
	<label>Payer:</label><%= f.collection_select :attendee_id, @trip.attendees.order(:name),:id,:name, include_blank: false %>
	</br>
	</br>
	<%= f.input :description, label: 'Expense detail:'%>
	</br>
	<%= f.input :amount, label: 'Amount paid:'%>
	<%= f.submit %> 
<% end %>
</div>

