<h1>Expenses</h1>
<table id="expenses" class="display" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th>Date</th>
      <th>Payer</th>
      <th>Description</th>
       <th>Amount</th>
    </tr>
  </thead>
  <tbody>
    <% @expenses.each do |expense| %>
      <tr>
        <td><%= expense.date %></td>
        <td><%= expense.attendee.name if expense.attendee %></td>
        <td><%= expense.description %></td>
        <td><%= expense.amount %></td>
        <td><%= link_to "remove expense", expense, 
                method: :delete, 
                data: {confirm:  "Are you sure?"},
                :class => 'btn btn-danger btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Add new expense', new_trip_expense_path(@trip) %>


<h2>Summary</h2>
<h5>Total expense: <%= @trip.expenses.sum(:amount) %></h5>

<div>
  <% @trip.attendees.each do |attendee| %>
          <%if attendee.expenses.sum(:amount) - (@trip.expenses.sum(:amount)/@trip.number) < 0  %>
          <p><%= attendee.name %> should pay: <%= attendee.expenses.sum(:amount) - (@trip.expenses.sum(:amount)/@trip.number) %></p>
          <%else%>
           <p><%= attendee.name %> should receive: <%= attendee.expenses.sum(:amount) - (@trip.expenses.sum(:amount)/@trip.number) %></p>  
           <%end%>       
        
  <%end%>
</div>



  