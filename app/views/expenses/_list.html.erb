<style>
.table-and-summary{
  margin-top: 3%;
}
.summary{
  text-align: left;
}
.total{
  margin-left: 15%
}
body{
  background: linear-gradient(0deg, #d0eaee, #ffffff);
}

</style>

<div class = "table-and-summary">
  <div class = "col-sm-9">
  <body>
  <h1>Expenses</h1>
  <table id="expenses" class="display" cellspacing="0" width="100%">
    <thead>
      <tr>
        <th>Date</th>
        <th>Payer</th>
        <th>Description</th>
        <th>Amount</th>
        <th>Remove</th>
      </tr>
    </thead>
    <tbody>
      <% @expenses.each do |expense| %>
        <tr>
          <td><%= expense.date %></td>
          <td><%= expense.attendee.name if expense.attendee %></td>
          <td><%= expense.description %></td>
          <td>$<%= expense.amount %></td>
          <td><%= link_to "remove expense", expense, 
                  method: :delete, 
                  data: {confirm:  "Are you sure?"},
                  :class => 'btn btn-danger btn-xs' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to 'Add new expense', new_trip_expense_path(@trip), :class => 'btn btn-primary' %>
  </div>

  <div class = "col-sm-3">
    <div class = "summary">
    <h1>Summary</h1>
    
    <ul>
      <% @trip.attendees.each do |attendee| %>
              <li>
              <%if attendee.expenses.sum(:amount) - (@trip.expenses.sum(:amount)/@trip.number) < 0  %>
              
              <p><%= attendee.name %>should pay: -$<%= (@trip.expenses.sum(:amount)/@trip.number - attendee.expenses.sum(:amount)) %></p>
              <%else%>
               <p><%= attendee.name %> should receive: $<%= attendee.expenses.sum(:amount) - (@trip.expenses.sum(:amount)/@trip.number) %></p>  
               <%end%> 
               </li>   
      <%end%>

    </ul>
    </br></br>
      <div class = "total">
        <h5>Total expenses: <%= @trip.expenses.sum(:amount) %></h5>
        <h5>Total expenses each: <%= @trip.expenses.sum(:amount)/@trip.number %></h5>
      </div>
    </div>
  </div>
  </body>
</div>



  